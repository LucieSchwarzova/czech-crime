{block head}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>

<script type="text/javascript">
$(document).ready(function() {

    $("#mapa").click(function(){
        $("#mapaContent").show();
        $("#usersContent").hide();
        $("#authorsContent").hide();
        $("#dataContent").hide();
        

        $("#subNav ul li a").each(function(){
           $(this).removeClass("active");
        });
        $(this).addClass("active");
        $(".header h2").html("Mapa Kriminality");
    });
    $("#users").click(function(){
        $("#mapaContent").hide();
        $("#usersContent").show();
        $("#authorsContent").hide();
        $("#dataContent").hide();
        $("#subNav ul li a").each(function(){
           $(this).removeClass("active");
        });
        $(this).addClass("active");
        $(".header h2").html("Uživatelé");
    });
    $("#authors").click(function(){
        $("#mapaContent").hide();
        $("#usersContent").hide();
        $("#authorsContent").show();
        $("#dataContent").hide();
        $("#subNav ul li a").each(function(){
           $(this).removeClass("active");
        });
        $(this).addClass("active");
        $(".header h2").html("Autoři");
    });
    $("#data").click(function(){
        $("#mapaContent").hide();
        $("#usersContent").hide();
        $("#authorsContent").hide();
        $("#dataContent").show();
        $("#subNav ul li a").each(function(){
           $(this).removeClass("active");
        });
        $(this).addClass("active");
        $(".header h2").html("Data");
    });

     //check slug
    var slug = location.hash;
    
    if( slug.indexOf( "oAplikaciMapa") > 0 ) {
        $("#mapa").trigger("click");
    } else if( slug.indexOf( "oAplikaciUzivatele" ) > 0 ) {
        $("#users").trigger("click");
    } else if( slug.indexOf( "oAplikaciData" ) > 0 ) {
        $("#data").trigger("click");
    }  
    
});
</script>


